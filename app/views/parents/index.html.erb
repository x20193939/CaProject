

<% if user_signed_in? %>
<!-- We used bootstrap to design our table to look nicer on the pages instead of having just the plain table-->
<!-- We used bootstrap to make the froms and tables look nicer with some design elements jumbotron a square box surround was used and rows where as we scroll over the lines it changes color-->
  <table class="table table-striped table-hover table-bordered">
    <thead class='table-info'>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Childs first name</th>
        <th>Childs last name</th>
        <th>Childs dob</th>
        <th>User Id</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @parents.each do |parent| %>
        <% if parent.user == current_user %>
        <tr>
          <td>
              <%= link_to parent.first_name + ' ' +  parent.last_name, parent %>
          </td>
          <td><%= parent.email %></td>
          <td><%= parent.phone %></td>
          <td><%= parent.childs_first_name %></td>
          <td><%= parent.childs_last_name %></td>
          <td><%= parent.childs_dob %></td>
          <td><%= parent.user_id %></td>
          <td><%= link_to 'Remove', parent, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-info btn-sm"  %></td>
        </tr>
      <% end %>
    <% end %>

  </tbody>
</table>
<!--This give a line break as the buttons where on top of each other -->
<br>
<!--The buttons where styled using bootstrap to make them stand out nicer-->
  <%= link_to 'New Parent', new_parent_path, class:"btn btn-primary"  %>
<% else %>

  <h1>Welcome to FG Childcare</h1>
  You can now access FG Childcare Services by signing up
<% end %>


